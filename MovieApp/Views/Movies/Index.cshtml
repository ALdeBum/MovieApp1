@model IEnumerable<MovieApp.Models.Movie>

<h1>Top Movies</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Director</th>
            <th>Genre</th>
            <th>Release Year</th>
            <th>Poster</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Director</td>
                <td>@movie.Genre</td>
                <td>@movie.ReleaseYear</td>
                <td><img src="@movie.Poster" alt="Poster" style="width: 100px; height: auto;" /></td>
                <td>@movie.Description</td>
            </tr>
        }
    </tbody>
</table>
